@model PartyInvites.Models.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="portview" content="width=width-device"/>
    <title>Thanks</title>
</head>
<body>
    <div>
        <h1>Thank you, @Model?.Name</h1>
        @if (Model?.WillAttend == true)
        {
            @:It's great that you're coming. The drinks are already in the fridge!
        }
        else
        {
            @:Sorry to hear that you can't make it, but thanks for letting us know.
        }
    </div>
    Click <a asp-action="ListResponses">here</a> to see who's coming.
    Click <a asp-action="RsvpForm">here</a> for a new entry
</body>
</html>